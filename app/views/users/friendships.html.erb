<h1>My friendship list</h1>
<hr>
<div class="search-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friend_path, remote: true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-right-padding">
        <%= text_field_tag :friend, params[:friend], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg' %>
      </div>
      <div class="col-sm-3 no-left-padding">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
          <%= icon('fa-solid', 'magnifying-glass', class: 'fa-2x')%>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
<div id="results">
</div>
<% if @friends.any? %>
  <%= render 'users/friendships_table' %>
<% end %>